################################################## security
# 不顯示目錄索引 
Options -Indexes
# 發生錯誤的時候, 不要顯示 apache 資訊
# ExtendedStatus On

##################################################
# deny access
<FilesMatch "\.(bak|backup|save|config|inc|ini|sql|log|tar|gz|zip)$">
    Order allow,deny
    Deny from all
    Satisfy all
</FilesMatch>

# linux
<FilesMatch "\.(sh|swp|swo)$">
    Order allow,deny
    Deny from all
    Satisfy all
</FilesMatch>

# linux
# -> .htaccess
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
    Satisfy all
</FilesMatch>

# ~ tag
# -> index.php~
<FilesMatch "~">
    Order allow,deny
    Deny from all
    Satisfy all
</FilesMatch>

##################################################
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /google-spreadsheets-tool

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [QSA,L]
</IfModule>

